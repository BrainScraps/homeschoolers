
<div class="gtg-form" >
<%= form_for @gtg, class: "form-vertical" do |f|  %>

  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="control-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="control-group">
    <%= f.label :start_time, class: "input-append date" %>
    <%= f.text_field :start_time, { id: "datetimepicker1", "data-format" => "MM/dd/yyyy HH:mm:ss PP", type: "text"} %>
    <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
  </div>

    <div class="control-group">
    <%= f.label :end_time %>
    <%= f.text_field :end_time, id: "datetimepicker2" %>
        <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
  </div>

  <div class="control-group">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="control-group">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="control-group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="control-group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="control-group">
    <%= f.button :submit %>
  </div>

<% end  %>


</div>