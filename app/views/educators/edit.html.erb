<% if @educator == current_educator %>

  <%= render 'first_login' if @educator.sign_in_count < 2 %>

  <h2> Your Profile</h2> 


  <%= form_for @educator, url: "update", method: :post do |f| %>

      <% if @family.nil?  %>
      <div class="control-group">
        <%= "Your family name (i.e. 'The Free-Wheelin' Farleys' or simply 'The Terrells')" %>
        <%= text_field_tag :family_name %>
      </div>
      <div class="control-group">
        <%= "Your family motto:" %>
        <%= text_field_tag :family_motto  %>
      </div>

      <% else %>
      <div class="control-group">
        <%= "Your family name (i.e. 'The Free-Wheelin' Farleys' or simply 'The Terrells')" %>
        <%= text_field_tag :family_name, @family.name %>
      </div>
      <div class="control-group">
        <%= "Your family motto:" %>
        <%= text_field_tag :family_motto, @family.motto  %>
      </div>
      <% end %>
   
   <div class="control-group">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>

    <div class="control-group"> 
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>

    <div class="control-group"> 
      <%= f.label 'Please tell us about your history when it comes to homeschooling, what style of teaching/learning you find useful, etc.' %><br>
      <%= f.text_area :profile  %>
    </div>
    <div class="control-group">
      <%= f.button :submit %>
     </div>
  <% end %>




<% else %>





<% end %>